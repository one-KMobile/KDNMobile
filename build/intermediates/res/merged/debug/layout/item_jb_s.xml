<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llItemParent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="36dp"
		android:orientation="horizontal">

		<TextView
			android:id="@+id/tvT1No"
			android:layout_width="50dp"
			android:layout_height="match_parent"
			android:gravity="center"/>

		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:background="@drawable/table_line_h" />

		<TextView
			android:id="@+id/tvCircuitName"
			android:layout_width="300dp"
			android:layout_height="match_parent"
			android:gravity="left"
			android:text="서서울서수원#2" />

		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:background="@drawable/table_line_h" />

		<TextView
			android:id="@+id/tvInspectNo"
			android:layout_width="600dp"
			android:layout_height="wrap_content"
			android:gravity="left" />

		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:background="@drawable/table_line_h" />

		<Button
			android:id="@+id/btnT1C"
			android:layout_width="120dp"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:background="@drawable/btn_good_m"
			android:gravity="left|center_vertical"
			android:paddingLeft="10dp"
			android:text="조치후양호" />

		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:background="@drawable/table_line_h" />

	</LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/table_line_w" />
    
</LinearLayout>