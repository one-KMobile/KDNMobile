<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llItemParent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >
        
	    <TextView
	        android:id="@+id/tvLeft"
	        android:layout_width="40dp"
	        android:layout_height="wrap_content"
	        android:gravity="center" />
	    
	    <ImageView
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:background="@drawable/table_line_h" />
	    
	    <TextView
	        android:id="@+id/tvRight"
	        android:layout_width="40dp"
	        android:layout_height="wrap_content" 
	        android:gravity="center" />
	    
	    <ImageView
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:background="@drawable/table_line_h" />
	    
	    <TextView
	        android:id="@+id/tvCircuitName"
	        android:layout_width="200dp"
	        android:layout_height="wrap_content"
	        android:text="상암등촌#1"
	        android:gravity="center" />
	
	    <ImageView
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:background="@drawable/table_line_h" />
	    
	    <TextView
	        android:id="@+id/tvLocation"
	        android:layout_width="60dp"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	         />
	    
	    <ImageView
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:background="@drawable/table_line_h" />
	    
	    <TextView
	        android:id="@+id/tvPosition"
	        android:layout_width="60dp"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	         />
	    
	    <ImageView
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:background="@drawable/table_line_h" />
	    
	    <EditText
	        android:id="@+id/editEJCnt"
	        android:layout_width="60dp"
	        android:layout_height="wrap_content"
	        android:singleLine="true"
	        android:maxLength="3"
	        android:inputType="number"
	        android:nextFocusDown="@+id/editBRCnt"
	        android:imeOptions="flagNoExtractUi"
	        android:background="@drawable/selector_input_s"
	        android:paddingLeft="8dp"
	        />
	    
	    <ImageView
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:background="@drawable/table_line_h" />
	    
	    <EditText
	        android:id="@+id/editBRCnt"
	        android:layout_width="60dp"
	        android:layout_height="wrap_content"
	        android:singleLine="true"
	        android:maxLength="3"
	        android:inputType="number"
	        android:imeOptions="flagNoExtractUi"
	        android:background="@drawable/selector_input_s"
	        android:paddingLeft="8dp"
	        />
	    
	    <ImageView
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:background="@drawable/table_line_h" />
	    
	    <Button
	        android:id="@+id/btnMakeDate"
	        android:layout_width="120dp"
	        android:layout_height="wrap_content"
	        android:background="@drawable/selector_input_br_calendar"
	        android:layout_gravity="center"
	        android:text="제작년월" />
	    
	    <ImageView
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:background="@drawable/table_line_h" />
	    
	    <EditText
	        android:id="@+id/editMakeCompany"
	        android:layout_width="200dp"
	        android:layout_height="wrap_content"
	        android:singleLine="true"
	        android:inputType="text"
	        android:imeOptions="flagNoExtractUi"
	        android:background="@drawable/selector_input_br_make_company"
	        android:paddingLeft="8dp"
	        android:text="제작업체" />
	    
	    <ImageView
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:background="@drawable/table_line_h" />
	    
	    <Button
	        android:id="@+id/btnYBresult"
	        android:layout_width="100dp"
	        android:layout_height="match_parent"
	        android:background="@drawable/btn_good_m"
	        android:gravity="left|center_vertical"
            android:paddingLeft="10dp"
	        android:layout_gravity="center"
	        android:text="조치후양호" />
	</LinearLayout>
	
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/table_line_w" />

</LinearLayout>