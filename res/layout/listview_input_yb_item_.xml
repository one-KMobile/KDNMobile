<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llItemParent"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tvNo"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="1" />

        <ImageView
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:background="@drawable/table_line_h" />
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/tvTowerNo1"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="128" />

            <ImageView
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent"
		        android:background="@drawable/table_line_h" />
            
            <TextView
                android:id="@+id/tvTowerNo2"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="129" />
        </LinearLayout>

        <ImageView
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:background="@drawable/table_line_h" />
        
        <TextView
            android:id="@+id/tvPlaceName"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="창고화재구역"
            android:paddingLeft="5dp" />

        <ImageView
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:background="@drawable/table_line_h" />
        
        <Button
            android:id="@+id/btnCheckResult"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/btn_good_m"
            android:gravity="left|center_vertical"
            android:paddingLeft="10dp"
            android:layout_gravity="center"
            android:text="양호" />

        <ImageView
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:background="@drawable/table_line_h" />
        
        <EditText
            android:id="@+id/editContent"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:text="판넬작업 완료 후 실내 작업중임."
            android:imeOptions="flagNoExtractUi"
            android:background="@drawable/selector_input_br_make_company"
		    android:paddingLeft="8dp"
		    android:paddingRight="5dp"
		    android:maxLength="50"
            android:singleLine="true" />
        
    </LinearLayout>
    
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/table_line_w" />

</LinearLayout>