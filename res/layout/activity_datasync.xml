<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/activity_header" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal" 
        >
		
        <TextView
            android:layout_marginTop="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_reset1"
            android:text="마지막 정보 갱신"
            android:gravity="center"
            android:textSize="16sp" />
        
        <TextView
           android:id="@+id/tvSyncDate"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="16sp"
           android:gravity="center"
           android:layout_marginBottom="50dp"
           android:background="@drawable/bg_reset2" />
        
        
       <Button
           android:visibility="gone"
            android:id="@+id/btnCheckSync"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/synchro_option"
            android:textSize="20sp" />
       
       
        <Button
            android:id="@+id/btnStartSync"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_datasync_start"
            android:textSize="20sp" />
        
        <View
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:visibility="invisible" />
        
        <Button
            android:id="@+id/btnLoadData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_datasync_load_excel"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>